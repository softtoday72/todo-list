{{!-- action 接的是位置 --}}
<form action="/todos/{{todo._id}}?_method=PUT" style="display:inline" method="POST">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone}} checked {{/if}}>
    </div>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{todo.name}}">
    <button class="btn btn-success" type="submit">Save</button>
  </div>
</form>