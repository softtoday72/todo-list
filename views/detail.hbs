<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;">

  <div class="input-group">
    <div class="input-group-text">
      {{!-- todo.isDone是on, if判斷式就會是true, todo.isDone是空值就會是 false --}}
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}" disabled>
    {{!-- detail.hbs 會在 /todo/:id 呈現出來，所以 ./ 就等同於 /todo/ --}}
    {{!-- <a href="./todos/{{ todo._id }}/edit">Edit</a> 會出現Cannot GET /todos/todos/61d6fd99136f1559001a7deb/edit --}}
    <a class="btn btn-success" href="/todos/{{ todo._id }}/edit">edit</a>
    <button class="btn btn-danger" type="submit">delete</button>

  </div>
</form>

